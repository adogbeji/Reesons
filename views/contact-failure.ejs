<%- include("partials/contact-header"); -%>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Zilla+Slab:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style media="all">
    .contact-failure--page {
      width: 100vw;
      background-color: #1B262C;
    }

    .failure-page {
      width: 90%;
      margin: auto;
      padding: 100px 0;
      /* background-color: #000000; */
    }

    .failure-background {
      background-color: #1B262C;
    }

    .text-1 {  /* Targeting small-screen devices & others */
      font-family: 'Zilla Slab', serif;
      font-weight: 700;
      font-size: 3.2rem;  /* Small-screen */
      color: #FFFF00;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-1 {
        transform: translateX(-3px);
      }
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .text-1 {
        font-size: 4rem;
      }
    }

    .text {
      font-size: 1.1rem;
      color: #FFFFFF;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text {
        transform: translateX(-3px);
      }
    }
  </style>
</head>

<body>

  <section class="contact-failure--page">
    <div class="container-fluid">
      <div class="failure-page">
        <div class="jumbotron jumbotron-fluid text-center failure-background">
          <div class="container">
            <h1 class="text-1">Ooops... there's been an error!</h1>
            <p class="text">Please re-send your message:</p>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>

<%- include("partials/footer"); -%>
