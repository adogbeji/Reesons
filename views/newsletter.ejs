<%- include("partials/newsletter-header"); -%>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Zilla+Slab:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style media="all">
    .newsletter-page {
      width: 100vw;
      background-color: #1B262C;
    }

    .text-container--1 {  /* Targeting small-screen devices & others */
      width: 90%;
      margin: auto;
      padding-top: 100px;  /* Small-screen */
      text-align: center;
      /* background-color: #FF0000; */
    }

    @media only screen and (min-width: 768px) and (max-width: 992px) {  /* Targeting medium-screen devices */
      .text-container--1 {
        padding-top: 200px;
      }
    }

    @media only screen and (min-width: 992px) {  /* Targeting large-screen devices and up */
      .text-container--1 {
        padding-top: 220px;
      }
    }

    .text-1 {  /* Targeting small-screen devices & others */
      font-family: 'Zilla Slab', serif;
      font-weight: 700;
      font-size: 2.1rem;  /* Small-screen */
      color: #FFFF00;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-1 {
        transform: translateX(-5px);
      }
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .text-1 {
        font-size: 3rem;
      }
    }

    .newsletter-form {
      width: 90%;
      margin: auto;
      padding-bottom: 150px;
      /* background-color: grey; */
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .newsletter-form {
        padding-bottom: 80px;
      }

      .newsletter-form form {
        transform: translateX(-3px);
      }
    }

    @media only screen and (min-width: 1300px) {  /* Targeting X-large devices */
      .newsletter-form {
        padding-bottom: 220px;
      }
    }

    .form-input input {
      border-radius: 0;
    }

    .form-button button {
      border-radius: 0;
    }

    .button-colour {
      color: #FFFFFF;
      background-color: #000000;
    }

    .button-colour:hover {
      color: #FFFFFF;
      background-color: #000000;
    }

    .text-container--2 {
      width: 90%;
      margin: auto;
      text-align: center;
      transform: translateY(-24px);
      /* background-color: #FF0000; */
    }

    .text-2 {
      color: #000000;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-2 {
        line-height: 1;
      }
    }
  </style>
</head>

<body>

  <section class="newsletter-page">
    <div class="container-fluid">
      <div class="text-container--1">
        <h3 class="text-1">Sign-up to our monthly newsletter so don't miss a beat!</h3>
      </div>
      <div class="newsletter-form">
        <form action="/newsletter" method="post">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="form-body d-flex justify-content-center">
        <div class="form-input">
          <input type="email" name="email" class="form-control" size="45" autocomplete="off" placeholder="your email...">
        </div>
        <div class="form-button">
          <button type="button" class="btn button-colour">Go!</button>
        </div>
      </div>
    </div>
  </div>
</form>
<div class="text-container--2">
  <p class="text-2">Your email will <span class="font-weight-bold font-italic">never</span> be shared with anyone else.</p>
</div>
      </div>
    </div>
  </section>

</body>

</html>

<%- include("partials/footer"); -%>
