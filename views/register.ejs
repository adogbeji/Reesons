<%- include("partials/register-header"); -%>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Zilla+Slab:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style media="all">
    .register-page {
      width: 100vw;
      background-color: #1B262C;
    }

    .form-container {
      width: 85%;
      margin: auto;
      padding: 100px 0 150px 0;
      /* background-color: #000000; */
    }

    .header-container {
      width: 90%;
      margin: auto;
      text-align: center;
      padding-bottom: 60px;
      /* background-color: #FF0000; */
    }

    .text-1 {  /* Targeting small-screen devices & others */
      font-family: 'Zilla Slab', serif;
      font-weight: 700;
      font-size: 2.8rem;  /* Small-screen only */
      color: #FFFF00;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-1 {
        transform: translateX(-5px);
      }
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .text-1 {
        font-size: 3.2rem;
      }
    }

    .text-colour--1 {
      color: #FFFFFF;
      text-transform: uppercase;
      text-decoration: solid underline #00FF00;
    }

    .card-color {
      border: none;
      background-color: #1B262C;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .card-color {
        transform: translateX(-5px);
      }
    }

    .form-group input {
      border-radius: 0;
    }

    .text-colour--2 {
      color: #000000;
    }

    .button-colour {
      color: #FFFFFF;
      border-radius: 0;
      background-color: #000000;
    }

    .button-colour:hover {
      color: #FFFFFF;
      background-color: #000000;
    }

    .login-prompt {
      width: 40%;
      margin-left: auto;
      transform: translate(116px, -18px);
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .login-prompt {
        transform: translate(-6px, -2px);
      }
    }

    @media only screen and (min-width: 768px) and (max-width: 992px) {  /* Targeting medium-screen devices */
      .login-prompt {
        transform: translate(2px, 3px);
      }
    }

    .login-message {
      color: #FFFFFF;
    }

    .login-link {
      color: #00FF00;
    }

    .login-link:hover {
      color: #00FF00;
      text-decoration: none;
    }
  </style>
</head>

<body>

  <section class="register-page">
    <div class="container-fluid">
      <div class="form-container">
        <div class="header-container">
          <h3 class="text-1">Please fill out the form below to create your <span class="font-weight-bold font-italic text-colour--1">free</span> account:</h3>
        </div>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-sm-8">
              <div class="card card-color">
                <div class="card-body">
                  <form action="/register" method="post">
                    <div class="form-group">
                      <label for="clientName"><span class="font-weight-bold text-colour--2">Name:</span></label>
                      <input type="text" name="name" class="form-control" id="clientName" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <label for="clientEmail"><span class="font-weight-bold text-colour--2">Email:</span></label>
                      <input type="email" name="username" class="form-control" id="clientEmail" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <label for="clientPassword"><span class="font-weight-bold text-colour--2">Password:</span></label>
                      <input type="password" name="password" class="form-control" id="clientPassword">
                    </div>
                    <button type="submit" class="btn button-colour">Submit</button>
                    <div class="login-prompt">
                      <p class="login-message">Got an account? <a href="/login" class="login-link">Login</a></p>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>

<%- include("partials/footer"); -%>
