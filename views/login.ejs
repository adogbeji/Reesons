<%- include("partials/login-header"); -%>

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Crete+Round&family=Zilla+Slab:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style media="all">
    .login-page {
      width: 100vw;
      background-color: #1B262C;
    }

    .form-container {
      width: 85%;
      margin: auto;
      padding: 100px 0 200px 0;
      /* background-color: #000000; */
    }

    .header-container {
      width: 90%;
      margin: auto;
      text-align: center;
      padding-bottom: 60px;
      /* background-color: #FF0000; */
    }

    .text-1 {  /* Targeting small-screen devices & others */
      font-family: 'Zilla Slab', serif;
      font-weight: 700;
      font-size: 2.8rem;  /* Small-screen */
      color: #FFFF00;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .text-1 {
        transform: translateX(-5px);
      }
    }

    @media only screen and (min-width: 768px) {  /* Targeting medium-screen devices and up */
      .text-1 {
        font-size: 3.2rem;
      }
    }

    .card-colour {
      border: none;
      background-color: #1B262C;
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .card-colour {
        transform: translateX(-5px);
      }
    }

    .text-colour {
      color: #000000;
    }

    .form-group input {
      border-radius: 0;
    }

    .button-colour {
      color: #FFFFFF;
      border-radius: 0;
      background-color: #000000;
    }

    .button-colour:hover {
      color: #FFFFFF;
      background-color: #000000;
    }

    .register-prompt {
      width: 40%;
      margin-left: auto;
      transform: translate(27px, -18px);
    }

    @media only screen and (max-width: 600px) {  /* Targeting small-screen devices */
      .register-prompt {
        transform: translate(-1px, -15px);
      }
    }

    @media only screen and (min-width: 768px) and (max-width: 920px) {  /* Targeting medium-screen devices */
      .register-prompt {
        transform: translate(20px, -7px);
      }
    }

    .register-message {
      color: #FFFFFF;
    }

    .register-link {
      color: #00FF00;
    }

    .register-link:hover {
      color: #00FF00;
      text-decoration: none;
    }
  </style>
</head>

<body>

  <section class="login-page">
    <div class="container-fluid">
      <div class="form-container">
        <div class="header-container">
          <h3 class="text-1">Please login to your account below:</h3>
        </div>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-sm-8">
              <div class="card card-colour">
                <div class="card-body">
                  <form action="/login" method="post">
                    <div class="form-group">
                      <label for="clientEmail"><span class="font-weight-bold text-colour">Email:</span></label>
                      <input type="email" name="username" class="form-control" id="clientEmail" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <label for="clientPassword"><span class="font-weight-bold text-colour">Password:</span></label>
                      <input type="password" name="password" class="form-control" id="clientPassword">
                    </div>
                    <button type="submit" class="btn button-colour">Login</button>
                    <div class="register-prompt">
                      <p class="register-message">Don't have an account? <a href="/register" class="register-link">Create One</a></p>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</body>

</html>

<%- include("partials/footer"); -%>
